<h1>BufferMessage list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Phone_number</th>
            <th>Text</th>
            <th>Sent</th>
            <th>Count</th>
            <th>Updatedat</th>
            <th>Createdat</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('dev_sms_buffermessage_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.phonenumber }}</td>
            <td>{{ entity.text }}</td>
            <td>{{ entity.sent }}</td>
            <td>{{ entity.count }}</td>
            <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('dev_sms_buffermessage_show', { 'id': entity.id }) }}">show</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

